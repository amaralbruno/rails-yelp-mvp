<center>
  <h1><%= @restaurant.name %></h1>
  <h3>Address</h3>
  <p><strong><%= @restaurant.address  %></strong></p>
  <h3>Type of food</h3>
  <p><strong><%= @restaurant.category  %></strong></p>
  <h3>Phone</h3>
  <p><strong><%= @restaurant.phone_number  %></strong></p>
  <hr>
  <h4><%= link_to "All", restaurants_path, class: "btn btn-success"  %></h4>
  <h4><%= link_to "Edit", edit_restaurant_path(@restaurant), class: "btn btn-primary"  %></h4>
  <h4><%= link_to "New review", new_restaurant_review_path(@restaurant), class: "btn btn-warning"  %></h4>
  <h4><%= link_to "Delete", restaurant_path(@restaurant),
  method: :delete,
  data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></h4>
  <hr>
  <% @restaurant.reviews.each do |review|  %>
    <h4>Review</h4>
    <%= review.content %>
    <br>
    <h4>Rating</h4>
    <strong><%= review.rating %></strong>
    <hr>
  <% end %>
</center>
